@startuml
title BankSimple - Mod√®le de Domaine (MDD)

class Client {
  +clientId: UUID
  +nom: String
  +adresse: String
  +nasSimule: String
  +statut: String
}

'===============================================

class Authentification {
  +login: String
  +motDePasse: String
  +mfaActive: Boolean
}

Client "1" -- "1" Authentification

'===============================================

class Session {
  +sessionId: UUID
  +dateCreation: DateTime
  +dateExpiration: DateTime
}

Client "1" -- "0..*" Session

'===============================================

class VerificationKYC {
  +kycId: UUID
  +dateVerification: Date
  +resultat: Boolean
}

Client "1" -- "1" VerificationKYC

'===============================================

class CompteBancaire {
  +compteId: UUID
  +type: String
  +solde: Decimal
  +dateOuverture: Date
  +statut: String
}

class Transaction {
  +transactionId: UUID
  +date: DateTime
  +montant: Decimal
  +type: String
  +statut: String
}

class ControleAML {
  +controleId: UUID
  +niveauRisque: String
  +dateAnalyse: DateTime
}

class Virement {
  +beneficiaire: String
}

class PaiementFacture {
  +fournisseur: String
  +referenceFacture: String
}

class JournalAudit {
  +journalId: UUID
  +horodatage: DateTime
  +action: String
  +acteur: String
}

class ClotureJournaliere {
  +dateCloture: Date
  +totalCredits: Decimal
  +totalDebits: Decimal
}

class ReleveBancaire {
  +releveId: UUID
  +periode: Date
  +dateGeneration: Date
}

class ProduitCredit {
  +creditId: UUID
  +montantAutorise: Decimal
  +tauxInteret: Float
  +soldeUtilise: Decimal
}

'===============================================

Client "1" -- "1..*" CompteBancaire

CompteBancaire "1" -- "0..*" Transaction
CompteBancaire "1" -- "0..*" ReleveBancaire
CompteBancaire "1" -- "1" ProduitCredit

Transaction <|-- Virement
Transaction <|-- PaiementFacture
Transaction "1" -- "0..1" ControleAML
Transaction "1" -- "0..*" JournalAudit

ClotureJournaliere "1" -- "1..*" ReleveBancaire

@enduml